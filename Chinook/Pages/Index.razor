@page "/"
@attribute [Authorize]
@inject IArtistService artistService;

@using Chinook.ClientModels;
@using Chinook.Services;

<PageTitle>Index</PageTitle>

<h1>Artists</h1>

<div style="margin-bottom: 10px">
    <input type="text" placeholder="Search" @bind="SearchText" />
</div>

@if (Artists == null)
{
    <Loading />
}
else
{
    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Number of albums</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var artist in Artists)
            {
                <tr>
                    <td><a href="Artist/@artist.ArtistId">@artist.Name</a></td>
                    <td>@artist.Albums.Count()</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<ArtistModel> Artists;

    private string searchText;
    public string SearchText
    {
        get { return searchText; }
        set
        {
            searchText = value.Trim();
            SearchArtists(searchText);
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await InvokeAsync(StateHasChanged);
        Artists = await artistService.GetArtists(); //GetArtists();
    }

    public async void SearchArtists(string searchText)
    {
        Artists = await artistService.SearchArtists(searchText);
    }

